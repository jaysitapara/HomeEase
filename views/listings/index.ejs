<%- layout('/layouts/boilerplate') %>

<div class="mt-3">
  <h3 class="mb-3 mt-3"><b>All Properties</b></h3>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for (let listing of allListings) { %>
    <a class="listing-link" href="/listings/<%= listing._id %>">
      <div class="card col listing-card">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="Listing Image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body mt-2">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#8377;&nbsp; <%= listing.price.toLocaleString("en-IN") %>
            <br />
            <%= listing.location %>
          </p>
        </div>
      </div>
    </a>

    <%}%>
  </div>
</div>
<script src="/js/script.js"></script>
